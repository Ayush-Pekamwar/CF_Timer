{
    "manifest_version": 3,
    "name": "Codeforces Problem Timer",
    "version": "1.1",
    "description": "A draggable, pinnable timer with toggle controls.",
    "permissions": [
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Show/Hide Timer"
    },
    "commands": {
        "toggle-timer": {
            "suggested_key": {
                "default": "Alt+Shift+T",
                "mac": "Alt+Shift+T"
            },
            "description": "Show/Hide the Timer"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://codeforces.com/contest/*/problem/*",
                "https://codeforces.com/problemset/problem/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ]
}