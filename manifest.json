{
    "manifest_version": 3,
    "name": "Codeforces Problem Timer",
    "version": "1.0",
    "description": "A draggable, pinnable timer that perfectly matches the Codeforces UI.",
    "permissions": [
        "storage"
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://codeforces.com/contest/*/problem/*",
                "https://codeforces.com/problemset/problem/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ]
}